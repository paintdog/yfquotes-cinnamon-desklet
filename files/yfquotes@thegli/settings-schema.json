{
  "head1": {
    "type": "header",
    "description": "Desklet layout"
  },
  "width": {
    "default": 440,
    "type": "spinbutton",
    "min": 40,
    "max": 4000,
    "description": "Width",
    "units": "pixels",
    "step": 20,
    "tooltip": "Desklet width in pixels."
  },
  "height": {
    "default": 640,
    "type": "spinbutton",
    "min": 40,
    "max": 4000,
    "description": "Height",
    "units": "pixels",
    "step": 20,
    "tooltip": "Desklet height in pixels."
  },
  "transparency": {
    "type": "scale",
    "default": 0.7,
    "min": 0.0,
    "max": 1.0,
    "step": 0.05,
    "description": "Background transparency",
    "tooltip": "The higher the value, the more solid the desklet background."
  },
  "head2": {
    "type": "header",
    "description": "Financial data"
  },
  "delayMinutes": {
    "default": 10,
    "type": "spinbutton",
    "min": 1,
    "max": 1440,
    "description": "Update frequency",
    "units": "minutes",
    "step": 1,
    "tooltip": "Data refresh frequency, in minutes."
  },
  "showLastUpdateTimestamp": {
    "type": "checkbox",
    "default": true,
    "description": "Show last update timestamp",
    "tooltip": "Display timestamp when quotes were updated last."
  },
  "quoteSymbols": {
    "type": "textview",
    "height": 150,
    "default": "MMM\nAXP\nAAPL\nBA\nCAT\nCVX\nCSCO\nKO\nDWDP\nXOM\nGE\nGS\nHD\nINTC\nIBM\nJNJ\nJPM\nMCD\nMRK\nMSFT\nNKE\nPFE\nPG\nTRV\nUTX\nUNH\nVZ\nV\nWMT\nDIS",
    "description": "Quote symbols",
    "tooltip": "List the stock quote symbols here, separated with line-breaks."
  },
  "head3": {
    "type": "header",
    "description": "Quote details"
  },
  "showIcon": {
    "type": "checkbox",
    "default": true,
    "description": "Show change icon",
    "tooltip": "Indicates whether the stock price moved up, down, or is unchanged."
  },
  "showStockName": {
    "type": "checkbox",
    "default": true,
    "description": "Show full quote name",
    "tooltip": "Display the full stock name (eg. International Business Machines). Click opens quote in browser."
  },
  "showStockSymbol": {
    "type": "checkbox",
    "default": true,
    "description": "Show ticker/symbol",
    "tooltip": "Display the quote symbol (eg. IBM)."
  },
  "showStockPrice": {
    "type": "checkbox",
    "default": true,
    "description": "Show price",
    "tooltip": "Display the current stock price (eg. 146.79)."
  },
  "showCurrencyCode": {
    "type": "checkbox",
    "default": true,
    "dependency": "showStockPrice",
    "description": "Show currency symbol",
    "tooltip": "Display the currency symbol of the price (eg. $)."
  },
  "showStockPercentChange": {
    "type": "checkbox",
    "default": true,
    "description": "Show percent change",
    "tooltip": "Display the percent change of the stock price (eg. +0.53%)."
  },
  "showTradeTime": {
    "type": "checkbox",
    "default": true,
    "description": "Show trading time",
    "tooltip": "Display the last trading time (if current day) or date."
  }
}
